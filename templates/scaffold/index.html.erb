<div class="page-header">
  <h1><%%= t('<%= singular_table_name %>.<%= name %>') %>列表</h1>
</div>

<div>
  <div class="pull-left">
    <%%= link_to "新增" + t('<%= singular_table_name %>.<%= name %>'), new_<%= singular_table_name %>_path, :class => 'btn btn-primary' %>
  </div>
  <div class="pull-right">
    <%%= <%= 'search_form_for @search do |f|' %> %>
      <%%= <%= 'f.text_field :"#{@search_key}", :style => "margin-top:10px;"' %> %>
      <%%= <%= 'f.submit "搜尋", :class => "btn"' %> %>
    <%% <%= 'end' %> %>
  </div>
</div>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th><i class="icon-list"></i></th>
      <% attributes.each do |attribute| -%>
        <th><i class="icon-tag"></i> <%%= t('<%= singular_table_name %>.<%= attribute.name %>') %></th>
      <% end -%>
      <th><i class="icon-cog"></i> 操作</th>
    </tr>
  </thead>
  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
    <tr>
      <td><%%= link_to <%= singular_table_name %>.id, edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
      <% attributes.each do |attribute| -%>
      <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
      <% end -%>
      <td>
        <div class="btn-group">
        <%%= link_to '查看', <%= singular_table_name %>, :class => 'btn btn-mini' %>
        <%%= link_to '編輯', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-mini' %>
        <%%= link_to '刪除', <%= singular_table_name %>, method: :delete, data: { confirm: '確定刪除？' }, :class => 'btn btn-mini btn-danger' %>
        </div>
    </td>
    </tr>
    <%% end %>
  </tbody>
</table>

<%%= paginate @<%= plural_table_name %> %>
